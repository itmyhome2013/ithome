<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<!--将该脚本加入struts2配置文件中      文物附件<include file="org/bkgd/hrmis/relic/web/conf/HrmisRelicFileWeb.xml"></include> -->
<struts>
	<!-- 文物附件 -->
	<package name="HrmisRelicFile_Ajax_code" extends="json-default">
		<!-- 文物附件查询 -->
		<action name="HrmisRelicFilequeryAll" method="queryall"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result type="json">
				<param name="root">jsonResult</param>
			</result>
		</action>
		<!-- 文物附件增加 -->
		<action name="HrmisRelicFileaddCommit" method="addSubmit"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result type="json"></result>
		</action>
		<!-- 文物附件删除 -->
		<action name="HrmisRelicFiledeleteCommit" method="delSubmit"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result type="json"></result>
		</action>
		<!-- 文物附件修改 -->
		<action name="HrmisRelicFileeditCommit" method="editSubmit"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result type="json"></result>
		</action>
		<!-- 文件下载 -->
		<action name="FPFlashloadfile" method="download"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result name="error">/WEB-FACE/img/temp/farmlogo.png</result>
			<result type="stream">
				<param name="contentType">application/x-www-form-urlencoded</param>
				<param name="inputName">inputStream</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>
		<!-- 附件上传 -->
		<action name="FPFlashFileUpload" method="fileUpload"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result type="json"></result>
			<result name="input">/PLUGIN/document/uploaderror.jsp</result>
		</action>
	</package>
	<package name="HrmisRelicFile_Jsp_code" extends="struts-default">
		<!-- 文物附件详细【修改、浏览】 -->
		<action name="HrmisRelicFileshow" method="view"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result>/hrmis/relic/pHrmisRelicFileEntity.jsp</result>
		</action>
		<!-- html加载文物附件控制台 -->
		<action name="HrmisRelicFile_ACTION_CONSOLE">
			<result>/hrmis/relic/pHrmisRelicFileLayout.jsp</result>
		</action>
		<!-- ajax加载文物附件选择页面 -->
		<action name="HrmisRelicFile_ACTION_ALERT" >
			<result>/hrmis/relic/pHrmisRelicFileGrid.jsp</result>
		</action>
			<!-- html加载图片控制台 -->
		<action name="HrmisRelicFilePicshow" method="picShow"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result>/hrmis/relic/commons/pHrmisImgBox.jsp</result>
		</action>
		<!-- html加载iframe -->
		<action name="HrmisRelicFile3DIframe" >
			<result>/hrmis/relic/commons/pHrmisFlashBox.jsp</result>
		</action>
		<!-- html加载flash -->
		<action name="HrmisRelicFile3Dshow"  method="flashShow"
			class="org.bkgd.hrmis.relic.web.action.ActionHrmisRelicFileQuery">
			<result>/hrmis/relic/commons/FlashBox.jsp</result>
		</action>
	</package>
</struts>