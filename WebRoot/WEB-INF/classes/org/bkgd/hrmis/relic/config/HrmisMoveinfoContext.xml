<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      移动信息<import resource="classpath:org/bkgd/hrmis/relic/config/HrmisMoveinfoContext.xml"></import> -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 移动信息Dao实现 -->
	<bean id="HRMIS_MOVEINFODaoId"
		class="org.bkgd.hrmis.relic.dao.HrmisMoveinfoDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisMoveinfo_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisMoveinfo_object" class="org.bkgd.hrmis.relic.domain.HrmisMoveinfo"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- 文物移动记录Dao实现 -->
	<bean id="HRMIS_RELIC_MOVEINFODaoId"
		class="org.bkgd.hrmis.relic.dao.HrmisRelicMoveinfoDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisRelicMoveinfo_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisRelicMoveinfo_object" class="org.bkgd.hrmis.relic.domain.HrmisRelicMoveinfo"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="HRMIS_MOVEINFOServerId"
		class="org.bkgd.hrmis.relic.server.HrmisMoveinfoManagerImpl">
		<property name="hrmisMoveinfoDao">
			<ref bean="HRMIS_MOVEINFODaoId" />
		</property>
		<property name="hrmisRelicMoveinfoDao">
			<ref bean="HRMIS_RELIC_MOVEINFODaoId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="HRMIS_MOVEINFOProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					org.bkgd.hrmis.relic.server.HrmisMoveinfoManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="HRMIS_MOVEINFOServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYHRMIS_MOVEINFOTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYHRMIS_MOVEINFOTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>