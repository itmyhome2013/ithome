<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      展出信息<import resource="classpath:org/bkgd/hrmis/relic/config/HrmisExhibitinfoContext.xml"></import> -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 展出信息Dao实现 -->
	<bean id="HRMIS_EXHIBITINFODaoId"
		class="org.bkgd.hrmis.relic.dao.HrmisExhibitinfoDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisExhibitinfo_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisExhibitinfo_object" class="org.bkgd.hrmis.relic.domain.HrmisExhibitinfo"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- 文物展出记录Dao实现 -->
	<bean id="HRMIS_RELIC_EXHIBITINFODaoId"
		class="org.bkgd.hrmis.relic.dao.HrmisRelicExhibitinfoDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisRelicExhibitinfo_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisRelicExhibitinfo_object" class="org.bkgd.hrmis.relic.domain.HrmisRelicExhibitinfo"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="HRMIS_EXHIBITINFOServerId"
		class="org.bkgd.hrmis.relic.server.HrmisExhibitinfoManagerImpl">
		<property name="hrmisExhibitinfoDao">
			<ref bean="HRMIS_EXHIBITINFODaoId" />
		</property>
		<property name="hrmisRelicExhibitinfoDao">
			<ref bean="HRMIS_RELIC_EXHIBITINFODaoId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="HRMIS_EXHIBITINFOProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					org.bkgd.hrmis.relic.server.HrmisExhibitinfoManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="HRMIS_EXHIBITINFOServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYHRMIS_EXHIBITINFOTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYHRMIS_EXHIBITINFOTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>