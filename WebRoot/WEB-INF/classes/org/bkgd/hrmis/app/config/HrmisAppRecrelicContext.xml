<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      文物出入库信息<import resource="classpath:org/bkgd/hrmis/app/config/HrmisAppRecrelicContext.xml"></import> -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 文物出入库信息Dao实现 -->
	<bean id="HRMIS_APP_RECRELICDaoId"
		class="org.bkgd.hrmis.app.dao.HrmisAppRecrelicDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisAppRecrelic_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisAppRecrelic_object" class="org.bkgd.hrmis.app.domain.HrmisAppRecrelic"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="HRMIS_APP_RECRELICServerId"
		class="org.bkgd.hrmis.app.server.HrmisAppRecrelicManagerImpl">
		<property name="hrmisAppRecrelicDao">
			<ref bean="HRMIS_APP_RECRELICDaoId" />
		</property>
		<property name="hrmisAppExhibitfileDao">
			<ref bean="HRMIS_APP_EXHIBITFILEDaoId" />
		</property>
		<property name="hrmisAppMovefileDao">
			<ref bean="HRMIS_APP_MOVEFILEDaoId" />
		</property>
		<property name="hrmisAppRelicfileDao">
			<ref bean="HRMIS_APP_RELICFILEDaoId" />
		</property>
		<property name="hrmisAppRepairfileDao">
			<ref bean="HRMIS_APP_REPAIRFILEDaoId" />
		</property>
		<property name="hrmisMoveinfoServer">
			<ref bean="HRMIS_MOVEINFOServerId" />
		</property>
		<property name="hrmisExhibitinfoServer">
			<ref bean="HRMIS_EXHIBITINFOServerId" />
		</property>
		<property name="hrmisRepairinfoServer">
			<ref bean="HRMIS_REPAIRINFOServerId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="HRMIS_APP_RECRELICProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					org.bkgd.hrmis.app.server.HrmisAppRecrelicManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="HRMIS_APP_RECRELICServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYHRMIS_APP_RECRELICTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYHRMIS_APP_RECRELICTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>