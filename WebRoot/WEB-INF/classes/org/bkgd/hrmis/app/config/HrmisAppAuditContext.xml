<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      审核信息<import resource="classpath:org/bkgd/hrmis/app/config/HrmisAppAuditContext.xml"></import> -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 审核信息Dao实现 -->
	<bean id="HRMIS_APP_AUDITDaoId"
		class="org.bkgd.hrmis.app.dao.HrmisAppAuditDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="HrmisAppAudit_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="HrmisAppAudit_object" class="org.bkgd.hrmis.app.domain.HrmisAppAudit"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="HRMIS_APP_AUDITServerId"
		class="org.bkgd.hrmis.app.server.HrmisAppAuditManagerImpl">
		<property name="hrmisAppAuditDao">
			<ref bean="HRMIS_APP_AUDITDaoId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="HRMIS_APP_AUDITProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					org.bkgd.hrmis.app.server.HrmisAppAuditManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="HRMIS_APP_AUDITServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYHRMIS_APP_AUDITTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYHRMIS_APP_AUDITTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>